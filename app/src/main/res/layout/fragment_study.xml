<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".StudyFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/study_question_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Вопрос №"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/study_question_text"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content"

                android:text="Текст вопроса"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/study_question_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:color/transparent"
                android:visibility="invisible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/study_question_variant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Вариант №1"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/study_question_variant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант №2"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/study_question_variant3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант №3"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/study_question_variant4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вариант №4"
                android:textColor="#000000"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/last_question"
                    android:gravity="bottom"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:id="@+id/next_question"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
